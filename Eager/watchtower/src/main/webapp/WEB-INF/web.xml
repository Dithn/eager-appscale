<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <context-param>
        <param-name>dataPointStore</param-name>
        <param-value>elk</param-value>
    </context-param>
    <context-param>
        <param-name>elkEndpoints</param-name>
        <param-value>128.111.179.159:9200</param-value>
    </context-param>

    <servlet>
        <servlet-name>APIBenchmarkServlet</servlet-name>
        <servlet-class>edu.ucsb.cs.eager.watchtower.APIBenchmarkServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QueryServlet</servlet-name>
        <servlet-class>edu.ucsb.cs.eager.watchtower.QueryServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BackupServlet</servlet-name>
        <servlet-class>edu.ucsb.cs.eager.watchtower.BackupServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DatastoreServlet</servlet-name>
        <servlet-class>edu.ucsb.cs.eager.watchtower.benchmark.DatastoreBenchmarkServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TimestampServlet</servlet-name>
        <servlet-class>edu.ucsb.cs.eager.watchtower.TimestampServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>APIBenchmarkServlet</servlet-name>
        <url-pattern>/benchmark</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QueryServlet</servlet-name>
        <url-pattern>/query</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BackupServlet</servlet-name>
        <url-pattern>/backup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DatastoreServlet</servlet-name>
        <url-pattern>/datastore</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TimestampServlet</servlet-name>
        <url-pattern>/timestamp</url-pattern>
    </servlet-mapping>
</web-app>
